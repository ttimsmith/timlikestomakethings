%tr
  %td
    %strong
      = link_to edit_manage_post_path(post) do
        = rubypants post.title.titleize
  %td= local_time(post.created_at)
  %td= link_to "Comments", manage_post_comments_path(post_id: post)
  %td= link_to 'Delete', manage_post_path(post), class: 'delete-link',
      method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }
